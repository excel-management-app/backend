{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "rootDir": "./src",
        "skipLibCheck": true
    },
    "include": ["src/**/*", "scratch/**/*"],
    "exclude": ["node_modules", "dist"]
}
